@model GraduationWeb.Models.ViewModels.TableSellVM

    <script src="~/js/SellPage.js"></script>
    this is sell page
    <form asp-controller="SellPage" asp-action="Index" method="post" style="text-align: center">

        <div class="row">
            <div class="col-md-6 col-sm-12">

                <div id="image_container"></div>
                <div class="form-group">
                    <input class="form-control form-control-user" asp-for="FormFile" type="file"
                           id="product_image" onchange="setThumbnail(event);" />
                </div>
            </div>
            <div class="col-md-6 col-sm-12">

                <div>
                    <div>
                        <label style="text-align: center">
                            Product Name
                            <input style="margin:0px 10px" type="text" placeholder="물품 이름" asp-for="ProductName" />
                            <span asp-validation-for="ProductName"></span>
                        </label>
                    </div>

                    <div>
                        <label>
                            Product Price
                            <input type="text" placeholder="물품 가격" asp-for="ProductPrice" />
                            <span asp-validation-for="ProductPrice"></span>
                        </label>
                    </div>
                    <div>
                        <label>
                            Product Num
                            <input type="text" placeholder="물품 개수" asp-for="ProductNum" />
                            <span asp-validation-for="ProductNum"></span>
                        </label>
                    </div>
                    <div>
                        <label>
                            Product Description
                            <input type="text" placeholder="물품 상세설명" asp-for="ProductDescription" style="height: 120px" />
                            <span asp-validation-for="ProductDescription"></span>
                        </label>
                    </div>
                </div>
            </div>

        </div>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#Check" style="width: 80% "> 물품 등록 </button>


        <div class="modal fade" id="Check" role="dialog">
            <div class="modal-dialog">
                <!--Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <h3 class="modal-title">해당 물품을 등록하시겠습니까?</h3>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                    <div class="modal-footer" style="text-align : right">
                        <button type="submit" class="btn btn-primary">확인</button>
                        <button class="btn-danger" type="button" data-dismiss="modal">취소</button>
                    </div>
                </div>
            </div>
        </div>
    </form>

    


